<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<referenceContainer name="content">
			<block name="jslayout.example" class="WebMeridian\JsLayoutExample\Block\Example\OnePage"
                   template="WebMeridian_JsLayoutExample::example/onepage.phtml"  cacheable="false">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="jslayoutexample" xsi:type="array">
                                <item name="component" xsi:type="string">uiComponent</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">WebMeridian_JsLayoutExample/onepage</item>
                                </item>
                                <item name="children" xsi:type="array">
                                    <item name="progressBar" xsi:type="array">
                                        <item name="sortOrder"  xsi:type="string">0</item>
                                        <item name="component" xsi:type="string">Magento_Checkout/js/view/progress-bar</item>
                                        <item name="displayArea" xsi:type="string">progressBar</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Magento_Checkout/progress-bar</item>
                                            <item name="deps" xsi:type="array">
                                                <item name="0" xsi:type="string">jslayoutexample.steps.form-step</item>
                                                <item name="1" xsi:type="string">jslayoutexample.steps.customers-step</item>
                                            </item>
                                        </item>
                                    </item>
                                    <item name="steps" xsi:type="array">
                                        <item name="component" xsi:type="string">uiComponent</item>
                                        <item name="displayArea" xsi:type="string">steps</item>
                                        <item name="children" xsi:type="array">
                                            <item name="form-step" xsi:type="array">
                                                <item name="component" xsi:type="string">WebMeridian_JsLayoutExample/js/view/form</item>
                                                <item name="dataScope" xsi:type="string">data</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="provider" xsi:type="string">checkoutProvider</item>
                                                    <item name="template" xsi:type="string">WebMeridian_JsLayoutExample/form</item>
                                                </item>
                                                <item name="children" xsi:type="array">
                                                    <item name="input_test" xsi:type="array">
                                                        <item name="sortOrder" xsi:type="string">10</item>
                                                        <item name="component" xsi:type="string">Magento_Ui/js/form/element/abstract</item>
                                                        <item name="dataScope" xsi:type="string">input_test</item>
                                                        <item name="config" xsi:type="array">
                                                            <item name="provider" xsi:type="string">checkoutProvider</item>
                                                            <item name="deps" xsi:type="array">
                                                                <item name="0" xsi:type="string">checkoutProvider</item>
                                                            </item>
                                                            <item name="template" xsi:type="string">ui/form/field</item>
                                                            <item name="elementTmpl" xsi:type="string">ui/form/element/input</item>
                                                            <item name="label" xsi:type="string" translate="true">Test Input</item>
                                                        </item>
                                                    </item>
                                                    <item name="select_test" xsi:type="array">
                                                        <item name="sortOrder" xsi:type="string">20</item>
                                                        <item name="component" xsi:type="string">Magento_Ui/js/form/element/select</item>
                                                        <item name="dataScope" xsi:type="string">select_test</item>
                                                        <item name="options" xsi:type="array">
                                                            <item name="0" xsi:type="array">
                                                                <item name="label" xsi:type="string">Select 1</item>
                                                                <item name="value" xsi:type="string">select_1</item>
                                                            </item>
                                                            <item name="1" xsi:type="array">
                                                                <item name="label" xsi:type="string">Select 2</item>
                                                                <item name="value" xsi:type="string">select_2</item>
                                                            </item>
                                                        </item>
                                                        <item name="config" xsi:type="array">
                                                            <item name="provider" xsi:type="string">checkoutProvider</item>
                                                            <item name="deps" xsi:type="array">
                                                                <item name="0" xsi:type="string">checkoutProvider</item>
                                                            </item>
                                                            <item name="template" xsi:type="string">ui/form/field</item>
                                                            <item name="elementTmpl" xsi:type="string">ui/form/element/select</item>
                                                            <item name="label" xsi:type="string" translate="true">Test Select</item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                            <item name="customers-step" xsi:type="array">
                                                <item name="component" xsi:type="string">WebMeridian_JsLayoutExample/js/view/customers</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">WebMeridian_JsLayoutExample/customers</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                            <item name="checkoutProvider" xsi:type="array">
                                <item name="component" xsi:type="string">uiComponent</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
	</body>
</page>
